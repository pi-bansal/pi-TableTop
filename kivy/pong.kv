#:kivy 1.1.0
Widget:
	canvas:
		Color:
			rgb:(1,1,1)
<PongBall>:
	size: 50, 50
	canvas:
		Color:
			rgb:(0.5,0.5,0.5)
		Ellipse:
			pos: self.pos
			size: self.size
			
<PongPaddle>:
	size: 25, 200
	canvas:
		Color:
			rgb:(0.5,0.5,0.5)
		Rectangle:
			pos:self.pos
			size:self.size

<PongGame>:
	ball: pong_ball
	player1: player_left
	player2: player_right
	
	canvas:
		Color:
			rgb:(0.2,0.2,0.2)
		Rectangle:
			pos: self.center_x - 5, 0
			size: 10, self.height

	Label:
		color:0,0,1,1
		font_size: 70
		center_x: root.width / 4
		top: root.top - 50
		text: str(player_left.score)

	Label:
		color:0,1,0,1
		font_size: 70
		center_x: root.width * 3 / 4
		top: root.top - 50
		text:str(player_right.score)

	PongBall:
		id: pong_ball
		center: self.parent.center
		
	PongPaddle:
		id: player_left
		x: root.x
		center_y: root.center_y

	PongPaddle:
		id: player_right
		x: root.width-self.width
		center_y: root.center_y
	
